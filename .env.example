# ===========================================
# Rural Care - Environment Variables
# ===========================================
# Copy this to .env for local development
# For Render: Add these in the Render dashboard or use render.yaml

# ===========================================
# Django Settings
# ===========================================
SECRET_KEY=your-secret-key-here
DEBUG=False

# ML Features - Set to False for Render free tier (no heavy ML)
ML_FEATURES_ENABLED=False

# ===========================================
# Database Configuration
# ===========================================
# Render provides DATABASE_URL automatically when you attach a database
# DATABASE_URL=postgres://user:password@host:5432/dbname

# For local development with SQLite:
USE_LOCAL_DB=true

# ===========================================
# Supabase Configuration (for auth/storage)
# ===========================================
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ===========================================
# AI/ML Configuration
# ===========================================
# Groq API for cloud-based AI (works without local ML)
GROQ_API_KEY=your-groq-api-key

# ===========================================
# Blockchain Configuration (Ethereum Sepolia)
# ===========================================
ALCHEMY_RPC_URL=your-alchemy-rpc-url
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key
BLOCKCHAIN_CONTRACT_ADDRESS=your-contract-address
PRESCRIPTION_CONTRACT_ADDRESS=your-prescription-contract-address
BLOCKCHAIN_ENABLED=True

# ===========================================
# Email Configuration (Gmail SMTP)
# ===========================================
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ===========================================
# Video Calling (Agora)
# ===========================================
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate
