# Example environment variables for Render deployment
# Copy this to .env for local development or add to Render dashboard

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Database Configuration (Supabase PostgreSQL)
# Note: Render will provide DATABASE_URL automatically if using their database
# These are only needed if using Supabase directly
USE_LOCAL_DB=false
DB_NAME=postgres
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=6543

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key

# Site URL (will be your Render URL in production)
SITE_URL=https://your-app.onrender.com

# Blockchain Configuration (Ethereum Sepolia Testnet)
ALCHEMY_RPC_URL=your-alchemy-rpc-url
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key
BLOCKCHAIN_CONTRACT_ADDRESS=your-contract-address
PRESCRIPTION_CONTRACT_ADDRESS=your-prescription-contract-address
BLOCKCHAIN_ENABLED=True

# Email Configuration (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Agora Video Calling
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate
